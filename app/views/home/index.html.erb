<body>
   
      <header style="background-color: #ffffff !important" class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <!-- Logo + Nom -->
            <a class="navbar-brand d-flex align-items-center" href="#">
                <%= image_tag "clock.png" %>
                <span style="font-weight: bold; font-size: 1.5rem;">RAP CLOCK</span>
            </a>
    
            <!-- Bouton pour mobile -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
    
            <!-- Liens Ã  droite -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <%= link_to "Artistes", artists_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Projets", projects_path, class: "nav-link" %>
                    </li>
                </ul>
            </div>
        </div>
    </header>
  
    <div class="titles">
        <h1 style="font-size: 700%;">RAP CLOCK</h1>
        <div class="clock-container">
            <%= image_tag "clock.png" , class: "clock" %>
        </div>

    </div>
    <div class="flex">
      <span id="countdown" class="timer">Test</span>
    </div>
    <div class="container">
        <div class="row">
            <% @projects_by_date.each do |date, projects| %>
            <div class="col-12">
                <h2>
                <% if date == Date.today %>
                    <div class="row">
                        <div class="col-12 text-center">
                        <h1>Aujourd'hui</h1>
                        </div>
                    </div>
                    
                <% elsif date == Date.tomorrow %>
                    <div class="row">
                        <div class="col-12 text-center">
                        <h1>Demain</h1>
                        </div>
                    </div>
                    
                <% else %>
                    <%= date.strftime("%d %B %Y") %> 
                <% end %>
                </h2>
            </div>

            <% projects.each do |project| %>
                <div class="col-md-3">
                <%= link_to project_path(project), id: dom_id(project) do %> <!-- Lien vers la page show du projet -->                     
                    <div class="box">
                        <img src="<%= project.cover %>" alt="<%= project.name %>" class="img-fluid">
                        <h3><%= project.name %></h3>
                        <h6>
                            <% if project.artists.any? %>
                            <%= project.artists.map(&:pseudo).join(", ") %>
                            <% else %>
                            Pas d'artistes.
                            <% end %>
                        </h6>
                    </div>

                <% end %>
                </div>
            <% end %>
            <% end %>
        </div>
    </div>
    <script>
  function getNextFridayMidnight() {
      const now = new Date();
      let nextFriday = new Date(now);
      nextFriday.setDate(now.getDate() + ((5 - now.getDay() + 7) % 7 || 7)); // Prochain vendredi
      nextFriday.setHours(0, 0, 0, 0);
      return nextFriday;
  }

  function updateCountdown() {
      const now = new Date();
      const targetDate = getNextFridayMidnight();
      const diff = targetDate - now;
      
      if (diff <= 0) {
          document.getElementById("countdown").textContent = "00 00 00 00";
          return;
      }
      
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((diff % (1000 * 60)) / 1000);
      
      document.getElementById("countdown").textContent = 
          `${days.toString().padStart(1, '')} j ${hours.toString().padStart(2, '')} h ${minutes.toString().padStart(2, '0')} m ${seconds.toString().padStart(2, '0')} s `;
  }

  setInterval(updateCountdown, 1000);
  document.addEventListener("DOMContentLoaded", updateCountdown);
  
</script>

  </body>