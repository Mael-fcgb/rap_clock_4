<div id="<%= dom_id project %>">
  <p>
    <strong>Name:</strong>
    <%= project.name %>
  </p>

    <p>
    <strong>Cover:</strong>
      <%= project.cover %>
    </p>

  <p>
    <strong>Date:</strong>
    <%= project.date %>
  </p>

  <p>
    <strong>Tracklist:</strong>
    <%= project.tracklist %>
  </p>

  <p>
    <strong>Artists:</strong>
    <% if project.artists.any? %>
      <ul>
        <% project.artists.each do |artist| %>
          <li><%= artist.pseudo %></li>
        <% end %>
      </ul>
    <% else %>
      <p>Pas d'artistes.</p>
    <% end %>
  </p>

</div>
